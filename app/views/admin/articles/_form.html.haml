-# frozen_string_literal: true
= simple_form_for [:admin, @article] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :entry_at
    = f.input :title
    = f.input :content
    = f.input :published

    = f.simple_fields_for :article_images do |img|
      - if img.object.image?
        .tag-sample= "挿入タグ：<img src='" + img.object.image.url + "' >"
        .uploaded-image= image_tag img.object.image.url
      = img.file_field :image

  .form-actions
    = f.button :submit
